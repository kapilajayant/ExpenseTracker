<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.jacker.jayantkapila.expensetracker.Main4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <View
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginTop="100dp"
            android:background="@color/yellow"
            android:drawingCacheQuality="high"
            android:layout_centerHorizontal="true"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textAlignment="center"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="45dp"
            android:textColor="@color/white"
            android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Spent"
                android:textAlignment="center"
                android:layout_marginTop="130dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="45dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123456"
                android:textAlignment="center"
                android:layout_marginTop="160dp"
                android:id="@+id/profile_spent"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:textSize="20dp" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profile_balance"
                android:layout_marginTop="160dp"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/circleyellow"
                android:src="@drawable/ic_person_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jayant"
                android:textSize="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="160dp"
                android:id="@+id/name"
                android:textColor="@color/white"
                />
            
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellow"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:src="@drawable/ic_email_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/email"
                android:textSize="20dp"
                android:textColor="#fa8a02"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_call_black_24dp"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contact"
                android:textSize="20dp"
                android:textColor="#fa8a02"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_business_center_black_24dp"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/occupation"
                android:textSize="20dp"
                android:textColor="#fa8a02"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:padding="10dp"
                android:src="@drawable/ic_attach_money_black_24dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/income"
                android:textSize="20dp"
                android:layout_margin="5dp"
                android:elevation="4dp"
                android:textColor="#fa8a02"
                android:padding="10dp"
                android:textStyle="bold"/>
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
